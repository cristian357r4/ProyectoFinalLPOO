<p id="notice"><%= notice %></p>

<h1>Personas</h1>

<table>
  <thead>
  <tr>
    <th>Nombre</th>
    <th>Apellido paterno paterno</th>
    <th>Apellido materno</th>
    <th>Sexo</th>
    <th>Telefono</th>
    <th>Correo</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @personas.each do |persona| %>
    <tr>
      <td><%= persona.nombre %></td>
      <td><%= persona.a_paterno %></td>
      <td><%= persona.a_materno %></td>
      <td><%= persona.sexo %></td>
      <td><%= persona.telefono %></td>
      <td><%= persona.correo %></td>
      <td><%= link_to 'Ver', persona %></td>
      <td><%= link_to 'Editar', edit_persona_path(persona) %></td>
      <td><%= link_to 'Eliminar', persona, method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

