<%= form_with(model: biometria, local: true, class: 'form-group', validate: true) do |form| %>
  <% if biometria.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(biometria.errors.count, "error") %> ocurrio algun error</h2>

      <ul>
        <% biometria.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <%= form.label :paciente_id, 'Paciente' %>
    <%= form.select(:paciente_id, Paciente.joins(:persona).collect { |e| [e.persona.nombre, e.id] }, {include_blank: 'Seleccione un paciente'}) %>
  </div>

  <div class="actions">
    <%= form.label :globulos_rojos, 'Globulos rojos' %>
    <%= form.text_field :globulos_rojos %>
  </div>

  <div class="actions">
    <%= form.label :globulos_blancos, 'Globulos blancos' %>
    <%= form.text_field :globulos_blancos %>
  </div>

  <div class="actions">
    <%= form.label :plaquetas, 'Plaquetas' %>
    <%= form.text_field :plaquetas %>
  </div>

  <div class="actions">
    <%= form.label :hemoglobina, 'Hemoglobina' %>
    <%= form.text_field :hemoglobina %>
  </div>


  <div class="actions">
    <%= form.label :hematocrito, 'Hemotocrito' %>
    <%= form.text_field :hematocrito %>
  </div>

  <div class="actions">
    <%= form.label :neutrofilos, 'Neutrofilo' %>
    <%= form.text_field :neutrofilos %>
  </div>

  <div class="actions">
    <%= form.submit 'Registrar', class: 'btn btn-success' %>
  </div>
<% end %>