<p id="notice"><%= notice %></p>

<h1>Comidas</h1>
<div class="tcontainer">
  <table class="table table-hover">
    <thead>
    <tr>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @comidas.each do |comida| %>
      <tr>
        <td><%= link_to comida.descripcion, comida %></td>
        <td><%= link_to 'Editar', edit_comida_path(comida) , class: 'btn btn-info glyphicon glyphicon-pencil'%></td>
        <td><%= link_to 'Eliminar', comida, method: :delete, data: {confirm: 'Estas seguro?'}, class: 'btn btn-danger	glyphicon glyphicon-trash' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

</div>

<br>

<%= link_to 'Registrar nueva comida', new_comida_path %>
