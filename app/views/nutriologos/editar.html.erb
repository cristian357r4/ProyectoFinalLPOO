<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-login">
        <div class="panel-heading">
          <div class="row">
            <div class="col-xs-6">
              <a href="#" id="register-form-link">Editar Datos</a>
            </div>
          </div>
          <hr>
        </div>
        <div class="panel-body">

          <div class="row">
            <div class="col-lg-12">
              <%= form_with(model: @persona, url: update_nutriologo_path, id: "formulario_nuriologo", local: true, validate: true) do |persona| %>
                <div class="form-group">
                  <%= persona.text_field :nombre, placeholder: "Introduzaca su Nombre", class: "form-control", autocomplete: "off", required: true %>

                </div>
                <div class="form-group">
                  <%= persona.text_field :a_paterno, placeholder: "Introduzaca su Apellido Paterno", class: "form-control", autocomplete: "off", required: true %>
                </div>
                <div class="form-group">
                  <%= persona.text_field :a_materno, placeholder: "Introduzaca su Apellido Materno", class: "form-control", autocomplete: "off", required: true %>
                </div>
                <div class="form-group dropdown">
                  <%= persona.label :sexo, "Seleccione su genero: " %>
                  <%= persona.select :sexo, options_for_select([["Hombre", "H"], ["Mujer", "M"]],) %>
                </div>
                <div class="form-group">

                  <%= persona.telephone_field(:telefono, placeholder: "Telefono", class: "form-control") %>

                  <%#= persona_fields.text_field :telefono, placeholder: "Introduzca su numero telefonico", class: "form-control", autocomplete: "off" %>
                </div>
                <div class="form-group">
                  <%= persona.email_field(:correo, placeholder: "Introduzca su correo Electronico", class: "form-control", autocomplete: "off", validate: {uniqueness: {case_sensitive: false, message: 'El correo electronico Ya ha sido registrado'}}, required: true) %>
                </div>

                <%= persona.fields_for :nutriologo do |nutriologo_fileds| %>
                  <div class="form-group">
                    <%= nutriologo_fileds.text_field :cedula_profesional, placeholder: "Introduzca su cedula profesional", class: "form-control", required: true %>
                  </div>
                  <div class="form-group">
                    <%= nutriologo_fileds.text_field :login, placeholder: "Introduzca su nombre de usuario", class: "form-control", required: true %>
                  </div>
                  <div class="form-group">
                    <%= nutriologo_fileds.label :password, "Introduzca su contraseña" %>
                    <%= nutriologo_fileds.password_field :password, class: "form-control", autocomplete: "off", required: true %>
                  </div>
                  <div class="form-group">
                    <%= nutriologo_fileds.label :password_confirmation, "Confirme su contraseña" %>
                    <%= nutriologo_fileds.password_field :password_confirmation, class: "form-control", autocomplete: "off", required: true %>
                  </div>


                <% end %>
                <div class="form-group">
                  <div class="row">
                    <div class="col-sm-6 col-sm-offset-3">
                      <%= persona.submit "Actualizar datos", class: "form-control btn btn-primary" %>
                    </div>
                  </div>
                </div>
                <div>
                  <div class="row">
                    <div class="col-sm-6 col-sm-offset-3">
                      <%= link_to ' Regresar', root_path, class: "form-control btn btn-danger glyphicon glyphicon-chevron-left" %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style type="text/css">

  .panel-login {
    border-color: #ccc;
    -webkit-box-shadow: 0 2px 3px 0 rgba(0, 0, 0, 0.2);
    -moz-box-shadow: 0 2px 3px 0 rgba(0, 0, 0, 0.2);
    box-shadow: 0 2px 3px 0 rgba(0, 0, 0, 0.2);
  }

  .panel-login > .panel-heading {
    color: #00415d;
    background-color: #fff;
    border-color: #fff;
    text-align: center;
  }

  .panel-login > .panel-heading a {
    text-decoration: none;
    color: #666;

    font-weight: bold;
    font-size: 15px;
    -webkit-transition: all 0.1s linear;
    -moz-transition: all 0.1s linear;
    transition: all 0.1s linear;
  }

  .panel-login > .panel-heading a.active {
    color: #029f5b;
    font-size: 18px;
  }

  .panel-login > .panel-heading hr {
    margin-top: 10px;
    margin-bottom: 0px;
    clear: both;
    border: 0;
    height: 1px;
    background-image: -webkit-linear-gradient(left, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.15), rgba(0, 0, 0, 0));
    background-image: -moz-linear-gradient(left, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.15), rgba(0, 0, 0, 0));
    background-image: -ms-linear-gradient(left, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.15), rgba(0, 0, 0, 0));
    background-image: -o-linear-gradient(left, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.15), rgba(0, 0, 0, 0));
  }

  .panel-login input[type="text"], .panel-login input[type="email"], .panel-login input[type="password"] {
    height: 45px;
    border: 1px solid #ddd;
    font-size: 16px;
    -webkit-transition: all 0.1s linear;
    -moz-transition: all 0.1s linear;
    transition: all 0.1s linear;
  }

  .panel-login input:hover,
  .panel-login input:focus {
    outline: none;
    -webkit-box-shadow: none;
    -moz-box-shadow: none;
    box-shadow: none;
    border-color: #ccc;
  }

  .btn-register {
    background-color: #1CB94E;
    outline: none;
    color: #fff;
    font-size: 14px;
    height: auto;
    font-weight: normal;
    padding: 14px 0;
    text-transform: uppercase;
    border-color: #1CB94A;
  }

  .btn-register:hover,
  .btn-register:focus {
    color: #fff;
    background-color: #1CA347;
    border-color: #1CA347;
  }

</style>
