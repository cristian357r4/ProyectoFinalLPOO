<p id="notice"><%= notice %></p>

<h1>Pacientes</h1>
<div class="tcontainer">
  <table class="table table-hover">
    <thead>
    <tr>
      <th>Nombre</th>
      <th>A paterno</th>
      <th>A materno</th>
      <th>Sexo</th>
      <th>Telefono</th>
      <th>Correo</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @personas.each do |persona| %>
      <tr>
        <td><%= link_to persona.nombre, persona %></td>
        <td><%= persona.a_paterno %></td>
        <td><%= persona.a_materno %></td>
        <td><%= persona.sexo %></td>
        <td><%= persona.telefono %></td>
        <td><%= persona.correo %></td>
        <td><%= link_to 'Editar', edit_persona_path(persona) %></td>
        <td><%= link_to 'Eliminar', persona, method: :delete, data: {confirm: 'Estas seguro?'} %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>


<br>

